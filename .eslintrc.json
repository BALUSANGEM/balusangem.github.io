{
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:jsx-a11y/recommended",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:react/recommended"
    ],
    "plugins": ["react", "import", "jsx-a11y"],
    "rules": {
      "react/prop-types": 0,
      "indent": ["error", 2],
      "linebreak-style": 1,
      "quotes": ["error", "double"],
      "react/jsx-uses-react": "error",   
      "react/jsx-uses-vars": "error"
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    }
  }